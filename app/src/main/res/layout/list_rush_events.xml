<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding= "true"
    android:layout_margin = "3dp"
    app:contentPadding="2dp"
    app:cardBackgroundColor="#4D757575"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="3dp"
        android:background="@drawable/rush_card_background">

        <LinearLayout
            android:id="@+id/list_rush_events_name_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/list_rush_events_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/list_rush_events_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_below="@+id/list_rush_events_name_type_layout"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/silver_accent"
            android:id="@+id/list_rush_events_line1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/list_rush_event_time"
            android:layout_below="@+id/list_rush_events_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            />


        <TextView
            android:id="@+id/list_rush_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_rush_event_time"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>