<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:contentPadding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/list_information_cards_display_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <ImageView
                android:id="@+id/list_information_cards_display_eventPicture"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true" />

            <ProgressBar
                android:id="@+id/list_information_cards_display_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/list_information_cards_eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:text="@string/test_string"
            android:layout_below="@+id/list_information_cards_display_layout" />

        <TextView
            android:id="@+id/list_information_cards_display_eventDescription"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/list_information_cards_eventName"
            android:layout_height="wrap_content"
            android:text="@string/test_string"
            android:textSize="12sp"
            />
        <ImageView
            android:id="@+id/list_information_video_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/list_information_cards_display_eventDescription"
            android:background="@drawable/square_background"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_cam"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>